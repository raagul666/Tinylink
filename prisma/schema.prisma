// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Link {
  id            String   @id @default(cuid())
  code          String   @unique
  url           String
  clicks        Int      @default(0)
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  lastClickedAt DateTime?

  @@index([code])
}